<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.QuestionOneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/question_one_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/who_is_the_best_cricketer_in_the_world"
            android:textSize="20dp"
            android:textColor="@color/black"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_one_label"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_one"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/sachin_tendulkar"
                android:checked="true"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_two"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/virat_kolli"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_three"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Adam Gilchirst"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/option_four"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Jacques Kallis" />
        </RadioGroup>
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/next"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="center"
        android:textAllCaps="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>